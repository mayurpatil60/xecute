                        function getFilesUploadData(e, controlName) {
                            var files = e.target.files || (e.dataTransfer && e.dataTransfer.files);
                            if (files.length > 0) {
                                if (window.FormData !== undefined) {
                                    var data = new FormData();
                                    for (var x = 0; x < files.length; x++) {
                                        data.append("file" + x, files[x]);
                                    }
                                    data.append("ControlName", controlName);
                                    uploadedFile = data;
                                } else {
                                    alert("This browser doesn't support HTML5 file uploads!");
                                }
                            }
                        }///getfilesuploaddata

                        function uploadFile(controlName) {
                            $.ajax({
                                type: "POST",
                                url: '/Document/DocumentUpload',
                                contentType: false,
                                processData: false,
                                data: uploadedFile,
                                success: function (result) {
                                    var ErrorMsgSpan = "#" + controlName + "Msg";
                                    var uploadButtonID = "#fileUpload" + controlName
                                    if (result == "1") {
                                        $(ErrorMsgSpan).html("File uploaded successufully!");                                        
                                    }
                                    else {
                                        $(ErrorMsgSpan).html("File uploaded failed!");                                        
                                    }
                                },
                                error: function (xhr, status, p3, p4) {
                                    var err = "Error " + " " + status + " " + p3 + " " + p4;
                                    if (xhr.responseText && xhr.responseText[0] == "{")
