@using xpPortal.Models
@model IEnumerable<xpPortal.Models.Buddy>
@{
    ViewBag.Title = "Buddy";
    Layout = "~/Views/Shared/RecruiterLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">

        <section class="panel">
            <header class="panel-heading header-class">
                Buddy List
                <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>

                </span>
            </header>
            <div class="panel-body" style="max-height:400px;overflow-y:auto">
                <table class="table table-hover tm-membr" id="manageJoinee">
                    <thead>
                        <tr>
                            <th width="30">S.No </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Phone No
                            </th>
                            <th>
                                Location
                            </th>
                            <th>
                                Rating
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;
                            foreach (Buddy obj in Model)
                            {
                                i++;

                                <tr>
                                    <td>@i</td>
                                    <td>
                                        @obj.Name @*+ @obj.LastName;}*@
                                    </td>
                                    <td>@obj.Email</td>
                                    <td>@obj.PhoneNo</td>
                                    <td>@obj.Location</td>
                                    <td>
                                        <div class="col-md-4 col-xs-7">
                                            <span class="todo-actionlist rating" style="font-size: 17px; top: 8px;">


                                                <span class="star"></span>
                                            </span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>

        </section><!--panel-->


    </div><!--container-fluid-->
</div>

<div class="row">
    <div class="col-sm-12">

        <section class="panel">
            <header class="panel-heading header-class">
                Buddy List
                <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>

                </span>
            </header>

        </section>
    </div>
    </div>


            <div class="row">

                <div class="col-md-6">
                    <h2>Add Buddy</h2>

                    <div class="container-fluid">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" placeholder="Name" required>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <label>Mobile</label>
                                <input type="text" class="form-control" placeholder="Mobile" required>
                            </div>
                            <div class="form-group">
                                <label>Position</label>
                                <input type="text" class="form-control" placeholder="Position" required>
                            </div>
                            <br />
                            <div class="form-group">
                                <btn type="submit" class="btn btn-primary btn-block center-block" style="width: 30%;float:right">Add</btn>
                            </div>
                        </form>
                    </div>
                </div>



            </div>
