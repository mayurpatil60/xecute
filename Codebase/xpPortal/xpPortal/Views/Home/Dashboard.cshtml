@using xpPortal.Models
@model NewJoinee
@{
    Layout = "~/Views/Shared/LayoutMaster.cshtml";
}
<head>

    <script type="text/javascript" src="jquery-1.8.3.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
</head>
<div class="row">
    <div class="col-md-4">
        <div class="mini-stat clearfix">
            <span class="mini-stat-icon orange"><i class="ico-clock2"></i></span>
            <div class="mini-stat-info">
                
                <span id="DaysToJoin">@Session["DaysToJoin"]</span>
                Days to Join
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="mini-stat clearfix">
            <span class="mini-stat-icon tar"><i class="fa fa-adjust"></i></span>
            <div class="mini-stat-info">
                <span>In progress</span>
                Overall Status
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="mini-stat clearfix">
            <span class="mini-stat-icon green"><i class="fa fa-eye"></i></span>
            <div class="mini-stat-info">
                <span>3</span>
                Upcoming Events
            </div>
        </div>
    </div>
</div>
<!--mini statistics end-->
<div class="row">
    <div class="col-md-6">
        <!--todolist start-->
        <section class="panel">
            <header class="panel-heading header-class" style="cursor:pointer" id="headerDoc">
                <a href="../Document/UploadDocument" style="color:white;text-decoration:underline">Documents</a>
            </header>
            <div class="panel-body profile-nav" style="height:270px;max-height:270px;overflow-y:auto;">
                <ul class="nav nav-pills nav-stacked">
                   @{
                       if (Model.NewJoineeList != null && Model.NewJoineeList.Count > 0)
                       {
                           foreach (System.Data.DataRow row in Model.NewJoineeList)
                           {
                            <li>
                                <a href="javascript:;">
                                    <i class="fa fa-file"></i> @row["DocumentName"].ToString()
                                    @if (@row["DocStatus"].ToString() == "Submitted")
                                    { <span class="badge label-warning pull-right r-activity">@row["DocStatus"].ToString()</span> }
                                    else if (@row["DocStatus"].ToString() == "Approved")
                                    { <span class="badge label-success pull-right r-activity">@row["DocStatus"].ToString()</span> }
                                    else if (@row["DocStatus"].ToString() == "Rejected")
                                    { <span class="badge label-danger pull-right r-activity">@row["DocStatus"].ToString()</span> }
                                    else
                                    { <span class="badge label-danger pull-right r-activity">@row["DocStatus"].ToString()</span> }
                                </a>
                            </li>
                           }
                       }
                       else
                       {
                        <li><a href="javascript:;"> <i class="fa fa-file"></i> Document 1 <span class="badge label-success pull-right r-activity">Approved</span></a></li>
                        <li><a href="javascript:;"> <i class="fa fa-file"></i> Document 2 <span class="badge label-danger pull-right r-activity">Rejected</span></a></li>
                        <li><a href="javascript:;"> <i class="fa fa-file"></i> Document 3 <span class="badge label-success pull-right r-activity">Approved</span></a></li>
                        <li><a href="javascript:;"> <i class="fa fa-file"></i> Document 4 <span class="badge label-warning pull-right r-activity">In Progress</span></a></li>
                       }
                }
                </ul>
            </div>
        </section>
        <!--todolist end-->
    </div>
        <div class="col-md-6">
            <!--notification start-->
            <section class="panel" style="height:320px">
                <header class="panel-heading header-class">
                    Buddy
                </header>
                <div class="panel-body">
                    <p>
                        No need to worry, we've got you covered. Your Buddy will help you out.
                    </p>
                    <div class="user-heading alt">
                        <a href="#">
                            <img alt="" src="~/images/lock_thumb.jpg">
                        </a>
                        <h1>Aditya</h1>
                        <p>Onboarding Team</p>
                    </div>
                    <div class="weather-category twt-category" style="margin-top:40px">
                        <ul>
                            <li class="active">
                                <h5 style="text-transform: none;">9800 098 000</h5>
                                Phone
                            </li>
                            <li>
                                <h5 style="text-transform: none;">aditya@xpanxion.co.in</h5>
                                Email
                            </li>
                            <li>
                                <h5 style="text-transform: none;">Aditya_g</h5>
                                Skype
                            </li>
                        </ul>
                    </div>
                </div>
            </section>

            <!--notification end-->
        </div>
</div>

<div class="row">
    <div class="col-md-8">
        <section class="panel">
           
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/images/1.jpg" alt="Los Angeles" style="width:100%;">
                    </div>

                    <div class="item">
                        <img src="~/images/2.jpg" alt="Chicago" style="width:100%;">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
                <div class="wdt-head">
                    Upcoming Events
                </div>
            </div>

        </section>
    </div>
    <div class="col-md-4">
        <!--notification start-->
        <section class="panel">
            <header class="panel-heading header-class">
                Contact Person
            </header>
            <div class="panel-body">
                <p>
                    Contact Person will help you out in queries related to documents.
                </p>
                <div class="user-heading alt">
                    <a href="#">
                        <img alt="" src="~/images/avatar-mini-2.jpg">
                    </a>
                    <h1>Nikita</h1>
                    <p>Recruitment Team</p>
                </div>
                <div class="weather-category twt-category">
                    <ul>
                        <li class="active" style="width: 48%;">
                            <h5 style="text-transform: none;">9800 098 000</h5>
                            Phone
                        </li>
                        <li style="width: 48%;">
                            <h5 style="text-transform: none;">nik@abc.com</h5>
                            Email
                        </li>
                    </ul>
                </div>
            </div>
        </section>
        <!--notification end-->
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        $("#headerDoc").click(function () {
            window.location.href = "../../Document/UploadDocument";

        });


    });

</script>

