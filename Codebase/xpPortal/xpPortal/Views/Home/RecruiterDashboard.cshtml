@using xpPortal.Models
@model NewJoinee
@{
    Layout = "~/Views/Shared/RecruiterLayout.cshtml";
}
@Html.AntiForgeryToken()


<div class="row">
    <div class="col-md-4">
        <div class="mini-stat clearfix">
            <span class="mini-stat-icon orange"><i class="fa fa-user"></i></span>
            <div class="mini-stat-info">
                <span id="NewJoineesCount"></span>
                New Joinees
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="mini-stat clearfix">
            <span class="mini-stat-icon tar"><i class="fa fa-question-circle" aria-hidden="true"></i></span>
            <div class="mini-stat-info">
                <span id="QueryCount"></span>
                Queries
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="mini-stat clearfix">
            <span class="mini-stat-icon green"><i class="fa fa-eye"></i></span>
            <div class="mini-stat-info">
                <span>2</span>
                Upcoming Events
            </div>
        </div>
    </div>
</div>
<!--mini statistics end-->
<div class="row">
    <div class="col-sm-12">
        <section class="panel">
            <header class="panel-heading">
                New Joinees
                <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    @*<a href="javascript:;" class="fa fa-cog"></a>
                        <a href="javascript:;" class="fa fa-times"></a>*@
                </span>
            </header>
            <div class="panel-body">
                <table id="JoineeTable" class="table  table-hover general-table">
                    <thead>
                        <tr>
                            <th> S.No</th>
                            <th class="hidden-phone">Full Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Progress</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;
                            foreach (System.Data.DataRow dr in Model.NewJoineeList)
                            {
                                i++;

                                <tr style="cursor:pointer">
                                    <td>@i</td>
                                    <td>@dr["FirstName"] @dr["MiddleName"] @dr["LastName"]</td>
                                    <td>@dr["EmailId"]</td>
                                    @if (i == 1)
                                    {
                                        <td title="Detailed info and documents pending"><span class="label label-danger label-mini">Due</span></td>
                                    }
                                    else if (i == 2)
                                    {
                                        <td title="Detailed info and documents pending"><span class="label label-warning label-mini">In Progress</span></td>
                                    }
                                    else
                                    {
                                        <td title="Detailed info and documents pending"><span class="label label-success label-mini">Complete</span></td>
                                    }
                                    <td title="Detailed info and documents pending">
                                        @if (i == 1)
                                        {
                                            <div class="progress progress-striped progress-xs">
                                                <div style="width: 10%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar" class="progress-bar progress-bar-danger">
                                                    <span class="sr-only">10% Complete (success)</span>
                                                </div>
                                            </div>
                                        }
                                        else if (i == 2)
                                        {
                                            <div class="progress progress-striped progress-xs">
                                                <div style="width: 50%" aria-valuemax="50" aria-valuemin="0" aria-valuenow="50" role="progressbar" class="progress-bar progress-bar-warning">
                                                    <span class="sr-only">50% Complete (success)</span>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="progress progress-striped progress-xs">
                                                <div style="width: 100%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="100" role="progressbar" class="progress-bar progress-bar-success">
                                                    <span class="sr-only">100% Complete (success)</span>
                                                </div>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                       
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <section class="panel">
            <div class="wdgt-row">
                <img src="~/images/weather_image.jpg" height="315" alt="">
                <div class="wdt-head">
                    Upcoming Events
                </div>
                
            </div>
           
        </section>
    </div>
    <div class="col-md-4">
        <!--notification start-->
        <section class="panel">
            <header class="panel-heading">
                Recent Process Feedback
            </header>
            <div class="panel-body">
                <p>
                    Contact Person will help you out in queries related to documents.
                </p>
                <div class="user-heading alt">
                    <a href="#">
                        <img alt="" src="~/images/avatar-mini-2.jpg">
                    </a>
                    <h1>Jane Doe</h1>
                    <p>Recruitment Team</p>
                </div>
                <div class="weather-category twt-category">
                    <ul>
                        <li class="active" style="width: 48%;">
                            <h5 style="text-transform: none;">9800 098 000</h5>
                            Phone
                        </li>
                        <li style="width: 48%;">
                            <h5 style="text-transform: none;">jim@abc.com</h5>
                            Email
                        </li>
                    </ul>
                </div>
            </div>
        </section>
        <!--notification end-->
    </div>
</div>

<script language="javascript">
    $(document).ready(function () {

        $('#NewJoineesCount').text($('#JoineeTable tbody tr').length);
        GetAllQueriesCount();
    });
    
    $('#JoineeTable tbody').on('click', 'tr', function () {
       
            var email = $(this).find("td").eq(2).text();
            var dataToPost = "&EmailId=" + email;
            $.post("../Recruiter/GetDetailInfo", dataToPost)
                .done(function (response, status, jqxhr) {
                    window.location.href = '/Recruiter/GetDetailInfo?EmailId='+email
                })
                .fail(function (jqxhr, status, error) {
                    // this is the ""error"" callback
                })
        });

    function GetAllQueriesCount() {
        debugger
        var url = "../Recruiter/GetAllQueriesCount";

        $.ajax({
            url: url,
            type: "GET",
            datatype: "JSON",
            contentType: 'application/json',
            traditional: true,
            success: function (data) {
                debugger
                $('#QueryCount').text(data);
            }
        });
    }
</script>
